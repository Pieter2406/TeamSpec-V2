{
    "name": "teamspec-viewer",
    "version": "0.1.0",
    "private": true,
    "description": "TeamSpec Viewer - A role-based documentation viewer for TeamSpec workspaces",
    "workspaces": [
        "frontend",
        "backend"
    ],
    "scripts": {
        "dev": "concurrently \"npm run dev --workspace=frontend\" \"npm run dev --workspace=backend\"",
        "build": "npm run build --workspace=frontend",
        "lint": "npm run lint --workspace=frontend && npm run lint --workspace=backend",
        "test": "npm run test --workspace=backend"
    },
    "devDependencies": {
        "concurrently": "^8.2.2"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}